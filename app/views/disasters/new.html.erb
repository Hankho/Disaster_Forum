<% if @disaster.errors.any? %>
    <ul>
      <% @disaster.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>


<%= form_for @disaster, :url => disasters_path do |f|%>
<div class="form-group">
	<%=f.label :category, "災情分類"%>
	<%=f.text_field :category,:class=>"form-control"%>
</div>
<div class="form-group">
	<%=f.label :title, "災情名稱"%>
	<%=f.text_field :title,:class=>"form-control"%>
</div>
<div class="form-group">
	<%=f.label :content, "災情內容"%>
	<%=f.text_area :content,:class=>"form-control"%>
</div>
<%=f.submit"新增",:class => "btn btn-primary"%>
<%= link_to"返回災害情報網", disasters_path, :class => "btn btn-danger"%>
<%end%>

